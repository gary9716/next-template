{
  "family": "your-task-definition-family",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::your-aws-account-id:role/your-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::your-aws-account-id:role/your-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "app",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000
        }
      ],
      "environment": [
        {
          "name": "ENV",
          "value": "staging"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "secrets": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/your-ecs-service",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "your-ecs-service"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:3000/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
